source 'https://rubygems.org'

gem 'faraday'
gem 'faraday_middleware'

group :development do
  gem 'byebug' if RUBY_VERSION[0] > 1
  gem 'bundler'
  gem 'jeweler',   '~> 1.8.5'
  gem 'pry'
end

group :test do
  gem 'minitest'
  gem 'minitest-focus'
  gem 'mocha', :require => false
  gem 'simplecov', :require => false
  gem 'vcr'
  gem 'webmock'
end
